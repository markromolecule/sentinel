{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@sentinel/shared": [
        "../../packages/shared/src"
      ],
      "@sentinel/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "svg.d.ts",
    "types/**/*.d.ts",
    "nativewind-env.d.ts"
  ]
}